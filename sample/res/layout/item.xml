<?xml version="1.0" encoding="utf-8"?>
<com.wagado.widget.SwipeFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wagado="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="#000000" >

    <View
        android:id="@+id/item_back_red"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ff0000"
        wagado:offsetOpenLeft="48dp" />

    <View
        android:id="@+id/item_back_green"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00ff00"
        wagado:offsetOpenLeft="96dp" />

    <View
        android:id="@+id/item_back_blue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0000ff"
        wagado:offsetOpenLeft="144dp" />

    <TextView
        android:id="@+id/item_front"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:textColor="#000000"
        wagado:offsetOpenLeft="192dp" />

</com.wagado.widget.SwipeFrameLayout>